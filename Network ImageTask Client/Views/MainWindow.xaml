<Window x:Class="Network_ImageTask_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_ImageTask_Client"
        mc:Ignorable="d"
        Title="CLIENT" Height="350" Width="500">
    <Grid>
        <Canvas>

            <Image Width="500" Height="230" Source="{Binding Image}"></Image>

            <Button Command="{Binding AddImageCommand}" Width="210" Height="70" Content="Add Image" FontSize="40" Canvas.Top="250" Background="DeepSkyBlue" Foreground="White" Canvas.Right="20">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Command="{Binding SendCommand}" Width="210" Height="70" Content="Send" FontSize="40" Canvas.Top="250" Background="DeepSkyBlue" Foreground="White" Canvas.Left="20">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>
</Window>
